<h1>Listing Scenes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Image</th>
      <th>Number</th>
      <th>Title</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for scene <- @scenes do %>
    <tr>
      <td><%= scene.description %></td>
      <td><%= scene.image %></td>
      <td><%= scene.number %></td>
      <td><%= scene.title %></td>

      <td>
        <span><%= link "Show", to: Routes.admin_chapter_scene_path(@conn, :show, @chapter_id, scene.id) %></span>
        <span><%= link "Edit", to: Routes.admin_chapter_scene_path(@conn, :edit, @chapter_id, scene.id) %></span>
        <span><%= link "Delete", to: Routes.admin_chapter_scene_path(@conn, :delete, @chapter_id, scene.id), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Scene", to: Routes.admin_chapter_scene_path(@conn, :new, @chapter_id) %></span>
